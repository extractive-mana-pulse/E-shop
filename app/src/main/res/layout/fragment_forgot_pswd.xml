<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.presentation.forgot.ui.ForgotPswdFragment">

    <ImageButton
        android:id="@+id/forgot_pswd_page_back_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@null"
        android:src="@drawable/arrowleft2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/back_btn_bg"/>

    <TextView
        android:id="@+id/forgot_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="48sp"
        android:layout_marginTop="68dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="?attr/textAppearanceTitleLarge"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/forgot_pswd_page_email_et"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:maxLines="30"
        android:padding="16dp"
        android:imeOptions="actionDone"
        android:layout_marginTop="24dp"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/email_et_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgot_password_tv"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/forgot_pswd_page_continue_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continue"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgot_pswd_page_email_et"/>


</androidx.constraintlayout.widget.ConstraintLayout>